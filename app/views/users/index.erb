<h1>Please sign up</h1>

<% if !current_user %>
  <form action='/sessions/new' id='Sign in'>
    <button type='submit' class="btn btn-primary">Sign in</button>
  </form>
<% end %>

 <div class="row">
   <div class="container s-form">
    <form action='/users' method='post'>

      <div class="form-group">
        <label for='username'>
          Username:
          <input name='username' class="form-control" type='text' value='<%= @user.username %>' required>
        </label>
      </div>

      <div class="form-group">
        <label for='firstname'>
          First Name:
          <input name='firstname' class="form-control" type='text' value='<%= @user.firstname %>' required>
        </label>
      </div>

      <div class="form-group">
        <label for='lastname'>
          Last Name:
          <input name='lastname' class="form-control" type='text' value='<%= @user.lastname %>' required>
        </label>
      </div>

      <div class="form-group">
        <label for='email'>
          Email:
          <input name='email' class="form-control" type='email' value='<%= @user.email %>' required>
        </label>
      </div>

      <div class="form-group">
        <label for='password'>
          Password:
          <input name='password' class="form-control" type='password' required>
        </label>
      </div>

      <div class="form-group">
        <label for='password_confirmation'>
          Confirm Password:
          <input name='password_confirmation' class="form-control" type='password' required>
        </label>
      </div>
        <button type='submit' class="btn btn-primary">Sign up</button>
      </form>
  </div>
</div>
