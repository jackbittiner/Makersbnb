<h1>List a Space</h1>

<div>
  <form action="/spaces" method="post" id="spaces">
  <label>
    Name: <input name="name" type="text">
  </label>
  <label>
    Description:
    <textarea rows="4" cols="50" name="description" form="spaces">
    </textarea>
  </label>
  <label>
    Price per night(Â£): <input name="price" type="text">
  </label>
  <label>
    Available from: <input name="available_from" type="date" min="<%= Time.now.strftime('%F') %>">
  </label>
  <label>
    Available to: <input name="available_to" type="date" min="<%= Time.now.strftime('%F') %>">
  </label>
  <label>
    Image Url: <input name="image_url" type="text">
  </label>
  <input type="submit" value="List my space">
  </form>
