<html>
  <body>

    <%if params[:username]%>
      <h1 align='center'><%=params[:username]%>'s spaces</h1>
    <%else%>
      <h1 align='center'> Available spaces:</h1>
    <% end %>

    <div class="list-a-space-btn">
      <form method="get" action="/spaces/new">
        <button type='submit' class="btn custom-button">List a Space</button>
      </form>
    </div>

    <div class="row">
      <ul id="spaces">
        <% @spaces.each do |space| %>
        <div class='listing'>
        <div class="listing-img">
          <img src="<%= space.image_url %>">
        </div>
        <div class="listing-info">
          <a href="/spaces/<%= space.id %>">
          <h2 align='left'><%= space.name %></h2>
          </a>
          <p><%= space.description %></p>
          <p>Â£<%= sprintf('%.2f', space.price) %></p>
          <div class="availability">
            <p>Availability: <%= space.available_from.strftime("%d/%m/%Y") %>&nbsp; - &nbsp;<%= space.available_to.strftime("%d/%m/%Y") %></p>
          </div>
          <img src="http://www.tripservice.ir/images/5-stars-icon.png"> <p class="review">20 reviews</p>
        </div>
        </div>
        <% end %>
      </ul>
    </div>
  </body>
</html>
